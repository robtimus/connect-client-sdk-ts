{
  "name": "@robtimus/connect-client-sdk",
  "version": "1.0.0",
  "description": "An SDK for the Ingenico Connect Client API",
  "homepage": "https://github.com/robtimus/connect-client-sdk-ts",
  "bugs": {
    "url": "https://github.com/robtimus/connect-client-sdk-ts/issues"
  },
  "license": "MIT",
  "author": "Rob Spoor",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robtimus/connect-client-sdk-ts.git"
  },
  "scripts": {
    "compile": "tsc",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --write \"**/*.+(json|ts|tsx)\"",
    "format:check": "prettier --check \"**/*.+(json|ts|tsx)\"",
    "build": "npm run format:check && npm run lint && npm run compile",
    "test": "jest"
  },
  "devDependencies": {
    "@types/applepayjs": "^14.0.0",
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.17",
    "@types/googlepay": "^0.7.0",
    "@types/jest": "^29.5.0",
    "@types/node-forge": "^1.3.2",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "dateformat": "^4.6.3",
    "duration-fns": "^3.0.2",
    "eslint": "^8.37.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-each": "^29.5.0",
    "jest-junit": "^15.0.0",
    "jest-runner-groups": "^2.2.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=8"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "printWidth": 180
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:check && npm run lint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "runner": "groups",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testPathIgnorePatterns": [
      "__tests__/integration/init.ts"
    ],
    "collectCoverage": true
  },
  "jest-junit": {
    "includeShortConsoleOutput": "true"
  },
  "dependencies": {
    "node-forge": "^1.3.1",
    "uuid": "^9.0.0"
  }
}
